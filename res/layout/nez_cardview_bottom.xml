<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/nez_cardview_bg_bottom_ripple"
	android:layout_width="fill_parent"
	android:layout_height="@dimen/card_height_settings"
	android:paddingStart="@dimen/card_view_start_padding"
	android:paddingEnd="@dimen/card_view_end_padding"
	android:layout_marginStart="@dimen/card_view_start_margin"
	android:layout_marginEnd="@dimen/card_view_end_margin"
	android:foreground="?android:attr/selectableItemBackground"
	xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView 
    	android:id="@android:id/icon"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	app:layout_constraintBottom_toBottomOf="parent"
    	app:layout_constraintEnd_toEndOf="parent"
    	app:layout_constraintTop_toTopOf="parent" />

    	<LinearLayout
    		android:gravity="center_vertical"
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
   			android:layout_marginEnd="50.0dip"
   			app:layout_constraintStart_toEndOf="@android:id/icon">
			<TextView
        		android:id="@android:id/title"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		style="@style/nez_cardview_text_primary"/>
        	<TextView
        		android:id="@android:id/summary"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="5.0dip"
        		style="@style/nez_cardview_text_secondary"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>