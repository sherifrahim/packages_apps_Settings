<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/wave_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="110dp"
        android:layout_height="205dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/about_phone_phone"
        android:antialias="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="26dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/phone_image">

        <TextView
            android:id="@+id/processor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/nezuko_processor_title"
            style="@style/TextAppearance.NezukoInfoTitle" />

        <TextView
            android:id="@+id/processor_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.NezukoInfoSummary" />

        <TextView
            android:id="@+id/storage_code_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/nezuko_storage_code_title"
            style="@style/TextAppearance.NezukoInfoTitle" />

        <TextView
            android:id="@+id/storage_code_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.NezukoInfoSummary" />

        <TextView
            android:id="@+id/battery_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/nezuko_battery_type_title"
            style="@style/TextAppearance.NezukoInfoTitle" />

        <TextView
            android:id="@+id/battery_type_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.NezukoInfoSummary" />

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/nezuko_screen_title"
            style="@style/TextAppearance.NezukoInfoTitle" />

        <TextView
            android:id="@+id/screen_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.NezukoInfoSummary" />

    </LinearLayout>
</RelativeLayout>